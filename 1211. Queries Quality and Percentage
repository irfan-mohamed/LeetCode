-- Write your PostgreSQL query statement below
WITH count_queries AS(
    SELECT
        query_name, 
        count(*)AS count_q 
    FROM Queries 
    GROUP BY query_name
)
SELECT
        q.query_name,
        ROUND(SUM(q.rating*1.0/q.position)/cq.count_q,2) AS quality,
        ROUND(SUM(CASE WHEN rating < 3 THEN 1 ELSE 0 END)*100.0/cq.count_q , 2) AS poor_query_percentage
    FROM
        Queries AS q
    JOIN
        count_queries AS cq ON cq.query_name = q.query_name
    GROUP BY
        q.query_name,cq.count_q;
