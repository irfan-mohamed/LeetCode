-- Write your PostgreSQL query statement below
WITH first_order_cte AS(
    SELECT
        customer_id,
        MIN(order_date) AS first_order
    FROM
        Delivery
    GROUP BY
        customer_id
)
SELECT
    ROUND(SUM(CASE WHEN first_order = customer_pref_delivery_date THEN 1 ELSE 0 END)*100.0/COUNT(*),2) AS immediate_percentage
FROM
    first_order_cte AS foc
LEFT JOIN
    Delivery AS d ON foc.customer_id = d.customer_id AND foc.first_order = d.order_date
;
